<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="nlog" type="NLog.Config.ConfigSectionHandler, NLog" />
  </configSections>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.0" />
  </startup>

  <nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        autoReload="true"
        throwExceptions="false">
    <extensions>
      <add assembly="QPAS" />
    </extensions>

    <variable name="appName" value="QPAS" />

    <targets>
      <target xsi:type="File"
              name="default"
              layout="${longdate}|${level:uppercase=true}|${logger}|${message}${onexception:${newline}EXCEPTION\: ${exception:format=ToString}}"
              fileName="C:\QPASLog\Log.log"
              keepFileOpen="true"
              concurrentWrites="false"
              archiveFileName="C:\QPASLog\${shortdate}.{##}.log"
              archiveNumbering="Sequence"
              archiveEvery="Day"
              maxArchiveFiles="30" />
    </targets>
    <rules>
      <logger name="*" writeTo="default" minlevel="Info" />
    </rules>
  </nlog>
</configuration>